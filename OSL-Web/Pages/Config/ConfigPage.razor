@page "/config"
@using Microsoft.AspNetCore.SignalR.Client
@using MudBlazor
@using OSL_WebApiRiot.WebApiRiot;

<PageTitle>Config</PageTitle>
<div class="parent">
    <div class="Configuration">
        <div class="content">
            <h1 class="title">Configuration :</h1>
            <br />
            <div class="configuration-web-api-key">
                <h2 class="title">Web riot api key :</h2>
                <div class="configuration-web-api-key-content">
                    <div>
                        <EditForm Model="@OverlayText" OnValidSubmit="@WebRiotApiKeySubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <label style="font-weight: bold">Web riot api key : </label>
                            <InputText id="name" @bind-Value="OverlayText.WebRiotApiKey" placeholder="RGAPI-00000000-0000-0000-0000-000000000000" />
                            <button class="btn btn-primary button-form" style="background-color: darkgreen" type="submit">Submit</button>
                        </EditForm>
                        <b>Current Web riot api Key :</b> @WebApiRiot.apiKey
                        <br />
                        <a href="https://developer.riotgames.com/" target="_blank">Riot Developer page (take your api key)</a>
                        <br />Login and copi past your "Development API Key"
                    </div>
                </div>
            </div>

            <br />

            <div class="configuration-patch-region">
                <h2 class="title">Patch and Region :</h2>
                <div class="configuration-patch-region-content">
                    <div class="form-group row">
                        <br />
                        <div class="col-sm-10">
                            <label style="font-weight: bold">Choose your patch and region configuration</label>
                            <select id="patch-region" @bind="@OverlayText.ValuePatchRegion" class="form-control" @onclick="@PatchRegionSubmit">
                                <option value="latest : fr_fr">latest : fr_fr (Default)</option>
                                @foreach (var patch in OSL_CDragon.CDragon.dataCDragon.Patch)
                                {
                                    @foreach (var region in patch.Region)
                                    {
                                        <option value="@patch.Name : @region.Name">@patch.Name : @region.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <br />

